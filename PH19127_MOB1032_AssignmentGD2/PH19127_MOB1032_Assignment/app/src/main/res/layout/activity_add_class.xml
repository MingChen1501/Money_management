<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddClassActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lớp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mã lớp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/txtMaLop"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên lớp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên lớp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/txtTenLop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnThemLop"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:text="Thêm lớp" />

            <Button
                android:id="@+id/btnLamMoi"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:text="Làm mới" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btnSuaLop"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:text="Sửa lớp" />
            <Button
                android:id="@+id/btnXoaLop"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:text="Xóa lớp" />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView">

        </ListView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>